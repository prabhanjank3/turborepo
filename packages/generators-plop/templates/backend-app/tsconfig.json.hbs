{
  "compilerOptions": {
    "target": "ES2020",                            // Modern JS output
    "module": "CommonJS",                          // Node-compatible module system
    "lib": ["ES2020"],                             // Use latest ES libs
    "moduleResolution": "node",                    // Resolve node_modules
    "outDir": "./dist",                            // Output directory
    "rootDir": "./src",                            // Source code root
    "strict": true,                                // Enable all strict type checks
    "esModuleInterop": true,                       // Allow default imports from CJS modules
    "forceConsistentCasingInFileNames": true,      // Enforce file name casing
    "skipLibCheck": true,                          // Skip checking type declarations
    "resolveJsonModule": true,                     // Allow importing JSON files
    "noImplicitAny": true,                         // Disallow `any` unless explicitly specified
    "noUnusedLocals": true,                        // Clean up unused variables
    "noUnusedParameters": true,                    // Clean up unused function args
    "allowJs": false,                              // Don't compile JS files
    "types": ["node"],                             // Include Node.js type defs
    "baseUrl": ".",                                // For path aliases (optional)
    "paths": {
      "@utils/*": ["src/utils/*"],                 // Example alias
      "@controllers/*": ["src/controllers/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
